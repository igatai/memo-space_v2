.new_tag
  = form_for [@tag] do |f|
    = f.text_field :name, class: 'new_tag__field',placeholder: 'type new tag name'
    .new_tag__folder
      .new_tag__folder__guide
        = "Folder to associate"
      .new_tag__folder__selection
        - @user_folders.each do |folder|
          = f.radio_button :folder_id, folder.id
          = f.label folder.name
      = f.submit 'Register', class: 'new_tag__submit_btn'