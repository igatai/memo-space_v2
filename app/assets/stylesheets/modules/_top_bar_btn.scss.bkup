&__btn {
  width: 400px;
  height: 80px;
  font-size: 36px;
  color: white;
  line-height: 80px;
  padding-top: 20px;
  display: flex;

  a {
    text-decoration: none;
  }
  a.wrapper__top_bar__btn__new_file {
    width: 50px;
    position: relative;
    p#new_file.fas.fa-plus-circle {
      font-size: 15px;
      color: white;
      position: absolute;
      left: -13px;
      bottom: 3px;
    }
    i#new_file.far.fa-file-alt {
      font-size: 28px;
      color: white;
    }
  }

  a.wrapper__top_bar__btn__new_tag {
    width: 50px;
    position: relative;
    p#new_tag.fas.fa-plus-circle {
      font-size: 15px;
      color: white;
      position: absolute;
      left: -13px;
      bottom: 3px;
    }
    i#new_tag.fas.fa-tags {
      font-size: 28px;
      color: white;
    }
  }
  a.wrapper__top_bar__btn__new_folder {
    width: 50px;
    position: relative;
    p#new_folder.fas.fa-plus-circle {
      font-size: 15px;
      color: white;
      position: absolute;
      left: -13px;
      bottom: 3px;
    }
    i#new_folder.far.fa-folder {
      font-size: 28px;
      color: white;
    }
  }

  i.far.fa-user {
    line-height: 80px;
    padding-left: 5px;
    font-size: 30px;
    color: white;
  }

  i.fas.fa-.fa-sign-out-alt {
    font-size: 28px;
    color: white;
    margin-left: 10px;
  }
}

